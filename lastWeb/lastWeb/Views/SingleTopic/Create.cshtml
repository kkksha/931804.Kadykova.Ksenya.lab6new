@model lastWeb.Models.TopicModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create Reply</h2>

<div class="blog-post-editor">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-horizontal">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <b>
                    <label asp-for="Title" class="col-md-2 control-label"></label>
                </b>
                <div class="col-md-10">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="Text" class="col-md-2 control-label"></label>
                </b>
                <div class="col-md-10">
                    <textarea asp-for="Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="Image1" class="col-md-2 control-label"></label>
                </b>
                <div class="col-md-10">
                    <input asp-for="Image1" type="file" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="Image2" class="col-md-2 control-label"></label>
                </b>
                <div class="col-md-10">
                    <input asp-for="Image2" type="file" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <b>
                    <label asp-for="Image3" class="col-md-2 control-label"></label>
                </b>
                <div class="col-md-10">
                    <input asp-for="Image3" type="file" class="form-control" />
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-dark" />
                </div>
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to topics</a>
</div>